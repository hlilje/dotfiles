set autoindent
set clipboard^=unnamed
set cursorline
set expandtab
set history=1000
set hlsearch
set ignorecase
set incsearch
set number
set scrolloff=8
set shiftwidth=4
set smartcase
set tabstop=4

let mapleader = ","

imap jk <Esc>
imap kj <Esc>
nnoremap ; :
nnoremap Q @q
nnoremap Y y$
nnoremap <C-e> 8<C-e>
nnoremap <C-y> 8<C-y>
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
nnoremap <Tab> :tabnext<CR>
nnoremap <S-Tab> :tabprevious<CR>
nnoremap <silent> <Space> za<CR>
vnoremap <Space> zf
nnoremap <Leader>fa ggVG=
nnoremap <Leader>dw :%s/\s\+$//<CR>
nnoremap <Leader>nn :nohlsearch<CR>
